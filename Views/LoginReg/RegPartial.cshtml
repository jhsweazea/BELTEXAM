@model User;
<form asp-action="Register">
    <div class="form-group row mb-2">
        <span asp-validation-for="Name" class="text-danger col-8 offset-4"></span>
        <label asp-for="Name" class="col-4"></label>
        <div class="col-8">
            <input asp-for="Name" class="form-control">
        </div>
    </div>
    <div class="form-group row mb-2">
        <span asp-validation-for="Email" class="text-danger col-8 offset-4"></span>
        <label asp-for="Email" class="col-4"></label>
        <div class="col-8">
            <input asp-for="Email" class="form-control">
        </div>
    </div>
    <div class="form-group row mb-2">
        <span asp-validation-for="Password" class="text-danger col-8 offset-4"></span>
        <label asp-for="Password" class="col-4"></label>
        <div class="col-8">
            <input asp-for="Password" class="form-control">
        </div>
    </div>
    <div class="form-group row mb-2">
        <span asp-validation-for="ConfirmPass" class="text-danger col-8 offset-4"></span>
        <label asp-for="ConfirmPass" class="col-4"></label>
        <div class="col-8">
            <input asp-for="ConfirmPass" class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <input type="submit" value="Register" class="col-4 offset-4 btn btn-primary">
    </div>
</form>