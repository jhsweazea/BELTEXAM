@model Activity
<div class="form-row">
    <span asp-validation-for="ActivityName" class="text-danger col-8 offset-2"></span>
    <div class="form-group col-md-6">
        <label asp-for="ActivityName" class="col-4"></label>
        <input asp-for="ActivityName">
    </div>
    <span asp-validation-for="Date" class="text-danger col-8 offset-2"></span>
    <div class="form-group col-md-6">
        <label asp-for="Date" class="col-4"></label>
        <input asp-for="Date">
    </div>
</div>
<div class="form-row">
    <span asp-validation-for="Duration" class="text-danger col-8 offset-2"></span>
    <div class="form-group col-md-6">
        <label asp-for="Duration" class="col-4"></label>
        <input asp-for="Duration">
    </div>
    <span asp-validation-for="DurationType" class="text-danger col-8 offset-2"></span>
    <div class="form-group col-md-6">
        <label asp-for="DurationType" class="col-4"></label>
        <select asp-for="DurationType">
            <option disabled selected>--</option>
            <option value="minute(s)">minute(s)</option>
            <option value="hour(s)">hour(s)</option>
            <option value="days(s)">days(s)</option>
        </select>
    </div>
    <div class="form-group">
        <span asp-validation-for="Description" class="text-danger col-8 offset-2"></span>
        <div class="form-group col-md-6">
            <label asp-for="Description" class="col-4"></label>
            <textarea asp-for="Description"></textarea>
        </div>

    </div>
    <input type="hidden" asp-for="CreatorId">
</div>